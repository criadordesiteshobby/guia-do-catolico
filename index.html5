<script>
  // Pesquisa Google
  document.getElementById('buscarGoogle').addEventListener('click', () => {
    const termo = document.getElementById('googleInput').value.trim();
    const iframe = document.getElementById('googleFrame');
    if (termo) {
      iframe.src = `https://www.google.com/search?q=${encodeURIComponent(termo)}`;
      iframe.style.display = 'block';
    }
  });

  // √çndice autom√°tico
  (function(){
    const steps = Array.from(document.querySelectorAll('.step'));
    const toc = document.getElementById('tocList');
    steps.forEach((s,i) =>{
      s.id = 'step'+(i+1);
      const h = s.querySelector('h2').innerText;
      const li = document.createElement('li');
      const a = document.createElement('a');
      a.href = '#'+s.id; a.innerText = h; a.style.color='inherit';
      li.appendChild(a); toc.appendChild(li);
    });
  })();

  // --------------------------
  // SISTEMA DE VOTA√á√ÉO
  // --------------------------
  const votos = JSON.parse(localStorage.getItem("votosPadroeiro") || "{}");

  document.getElementById("btnVotar").addEventListener("click", () => {
    const selecionado = document.querySelector('input[name="padroeiro"]:checked');
    if (!selecionado) return alert("Escolha um candidato!");

    const nome = selecionado.value;
    votos[nome] = (votos[nome] || 0) + 1;

    localStorage.setItem("votosPadroeiro", JSON.stringify(votos));
    mostrarResultados();
    alert("Voto registrado! Obrigado.");
  });

  function mostrarResultados() {
    const area = document.getElementById("resultadoVotos");
    const lista = document.getElementById("listaResultados");
    lista.innerHTML = "";

    const total = Object.values(votos).reduce((a,b) => a + b, 0);

    for (const santo in votos) {
      const pct = ((votos[santo] / total) * 100).toFixed(1);
      const li = document.createElement("li");
      li.textContent = `${santo}: ${votos[santo]} votos (${pct}%)`;
      lista.appendChild(li);
    }
    area.style.display = "block";
  }

  mostrarResultados();
</script>

